<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>andy-cli</AssemblyName>
    <RootNamespace>Andy.Cli</RootNamespace>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>false</SelfContained>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Andy.Context" Version="2025.9.23-rc.4" />
    <PackageReference Include="Andy.Engine" Version="2025.10.6-rc.13" />
    <PackageReference Include="Andy.Llm" Version="2025.10.5-rc.16" />
    <PackageReference Include="Andy.Model" Version="2025.9.20-rc.4" />
    <PackageReference Include="Andy.Tools" Version="2025.9.5-rc.15" />
    <PackageReference Include="Andy.Tui" Version="2025.10.4-rc.35" />
    <PackageReference Include="JsonRepairSharp" Version="1.2.3" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.8.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.8.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="9.0.9" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>